<h1>All Wikis</h1>

<div class="row">
  <div class="col-md-8">
      <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">

      <p><%= link_to wiki.title, wiki %></p>
    </h4>
    <small>
      <p><%= wiki.user.email%></p>
      <p><%= wiki.created_at%></p>
    </small>
  </div>
</div>
      <% end %>
    </div>

    <div class="col-md-4">
      <% if policy(Wiki.new).create? %>
        <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
      <% end %>
    </div>
 </div>

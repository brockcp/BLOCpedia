<h1><%= markdown(@wiki.title) %></h1>

  <% if (@wiki.private && current_user && current_user!=@wiki.user) || @wiki.private && !current_user %>
   <h4> Sorry, this Wiki is private.</h4>

  <% else %>
  <div class="row">
    <h1><%= markdown(@wiki.body) %></h1>
    <small> creator: <%= @wiki.user.email %>
            at <%= @wiki.created_at %>
    </small>
    <br>
           <br>
            <h6>Collaborators:
                <% @wiki.collaborating_users.each do |user| %>
                    <%= user.email %>
                <% end %>
            </h6>
  </div>

  <div class="col-md-4">
    <% if policy(@wiki).update? %>
      <%= link_to "UPDATE WIKI", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <% end %>
    <% if policy(@wiki).destroy? %>
      <%= link_to "DELETE WIKI", @wiki, method: :delete, class: 'btn btn-danger',
      data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    <% end %>
  </div>
  <% end %>

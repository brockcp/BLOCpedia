<h1><%= @wiki.title %></h1>

  <% if @wiki.private %><%# if (@wiki.private && current_user && current_user!=@wiki.user) || @wiki.private && !current_user %>
   <h4> Sorry, this Wiki is private.</h4>

  <% else %>
  <div class="row">
    <h1><%= @wiki.body %></h1>
    <small> created by <%= @wiki.user.email %><%#= current_user.email %>
            at <%= @wiki.created_at %>
    </small>
  </div>

  <div class="col-md-4">
    <% if policy(@wiki).update? %>
      <%= link_to "UPDATE WIKI", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%# end %>
    <%# if policy(@wiki).destroy? %>
      <%= link_to "DELETE WIKI", @wiki, method: :delete, class: 'btn btn-danger',
      data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    <% end %>
  </div>
  <% end %>

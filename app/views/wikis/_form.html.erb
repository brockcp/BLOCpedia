<%= form_for @wiki do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter Wiki Title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: "form-control", placeholder: "Enter Wiki Info" %>
    </div>

    <% if current_user.admin? || current_user.premium? %>
      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private %> Private Wiki
        <% end %>
      </div>
      <div class="form-group">
       <h4>Add collaborators</h4>
        <% User.all.each do |collaborating_user| %>
         <% next if collaborating_user == @wiki.user %>
         <%= check_box_tag "wiki[collaborating_user_ids][]", collaborating_user.id,
         @wiki.collaborating_users.include?(collaborating_user),
         id: dom_id(collaborating_user) %>
         <%= label_tag dom_id(collaborating_user),
             collaborating_user.email %><br>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
<% end %>
